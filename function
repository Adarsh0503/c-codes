#include <stdio.h>
int main() {
    char s[] = "Programming is fun";
    int i;

    for (i = 0; s[i] != '\0'; ++i);
    
    printf("Length of the string: %d", i);
    return 0;
}



/* length calculation using inputs from user
#include<stdio.h>
#include<string.h>

int main()
{
   
    char a[100];
    int length;

    printf("\n\nEnter a string you wish to calculate the length of :   ");
    /*
        to take a single string (including spaces) 
        as input at a time
    */
    gets(a);
    /*
        Return the length of the string 
        or the number of characters in the string
    */
    length = strlen(a);

    printf("\n\nThe length of the input string is: %d\n\n", length);
    
    return 0;
}
